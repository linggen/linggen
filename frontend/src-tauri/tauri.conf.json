{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Linggen",
    "version": "0.4.1",
    "identifier": "dev.linggen.desktop",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": false,
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Linggen",
                "width": 1400,
                "height": 900,
                "minWidth": 1200,
                "minHeight": 700,
                "center": true,
                "visible": false,
                "dragDropEnabled": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "createUpdaterArtifacts": true,
        "resources": [
            "resources/frontend/**/*"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns"
        ],
        "externalBin": [
            "linggen-server"
        ],
        "macOS": {
            "entitlements": null,
            "exceptionDomain": "localhost",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null,
            "minimumSystemVersion": "12.0"
        },
        "shortDescription": "AI-powered personal knowledge assistant",
        "longDescription": "Linggen is a local-first memory layer that indexes your files, documents, and code to provide intelligent search and chat capabilities.",
        "copyright": "Copyright 2024 Linggen. All rights reserved."
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://github.com/linggen/linggen-releases/releases/latest/download/latest.json"
            ],
            "dialog": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE5NkVGNURDQzExNkE1OEEKUldTS3BSYkIzUFZ1R2YzVUVaQkZPQ0V1TXIzbzhPakhzaUM5SWo3dTVVeUxra3lhVmZ2MzhTVzMK",
            "windows": {
                "installMode": "passive"
            }
        }
    }
}