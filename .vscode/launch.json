{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/backend/target/debug/linggen-server",
            "preLaunchTask": "cargo build",
            "args": ["--port", "8787"],
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "RUST_LOG": "debug",
                "PATH": "${env:HOME}/.cargo/bin:${env:PATH}"
            },
            "sourceLanguages": [
                "rust"
            ]
        },
        {
            "name": "Tauri Desktop App",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run tauri:dev",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend",
            "preLaunchTask": "npm: dev"
        },
        {
            "name": "Linggensite",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5174",
            "webRoot": "${workspaceFolder}/linggensite",
            "preLaunchTask": "npm: dev - linggensite"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack",
            "configurations": [
                "Backend",
                "Frontend"
            ]
        }
    ]
}