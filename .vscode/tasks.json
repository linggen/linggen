{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo build --bin linggen && sudo ln -sf ${workspaceFolder}/backend/target/debug/linggen /usr/local/bin/linggen",
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PATH": "${workspaceFolder}/tools/protoc/bin:${env:PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo build mcp-server",
            "type": "shell",
            "command": "cargo build -p mcp-server",
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PATH": "${workspaceFolder}/tools/protoc/bin:${env:PATH}"
                }
            },
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "npm",
            "script": "dev",
            "path": "frontend",
            "label": "npm: dev",
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "VITE",
                    "endsPattern": "Local:"
                }
            }
        }
    ]
}